<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uci.ics.smartband.index">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <Button
            android:layout_width="340dp"
            android:layout_height="85dp"
            android:layout_gravity="end"
            android:background="@color/step"
            android:onClick="goToStep"
            android:text="Step"
            android:textSize="30sp" />

        <Button
            android:layout_width="342dp"
            android:layout_height="78dp"
            android:layout_gravity="end"
            android:background="@color/uv"
            android:onClick="goToUV"
            android:text="UV"
            android:textSize="30sp" />

        <Button
            android:layout_width="342dp"
            android:layout_height="78dp"
            android:layout_gravity="end"
            android:background="@color/temp"
            android:onClick="goToTemperature"
            android:text="temperature"
            android:textSize="30sp" />

        <Button
            android:layout_width="342dp"
            android:layout_height="83dp"
            android:layout_gravity="end"
            android:background="@color/carbon"
            android:onClick="goToCarbon"
            android:text="Carbon"
            android:textSize="30sp" />

        <Button
            android:layout_width="342dp"
            android:layout_height="80dp"
            android:layout_gravity="end"
            android:background="@color/heartbeat"
            android:onClick="goToHeartbeat"
            android:text="HeartBeat"
            android:textSize="30sp" />

    </LinearLayout>

</RelativeLayout>
